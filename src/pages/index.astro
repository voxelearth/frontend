  <script slot="scripts" is:inline>
    (() => {
      const DEBUG = location.search.includes("debugParallax=1");

      if (!document.getElementById("ve-parallax-hardcss")) {
        const s = document.createElement("style");
        s.id = "ve-parallax-hardcss";
        s.textContent =
          "[data-parallax-frame]{position:relative;overflow:hidden;isolation:isolate}" +
          "[data-parallax-frame] picture,[data-parallax-frame] img{position:absolute;inset:0;width:100%;height:100%;display:block}" +
          "[data-parallax-frame] picture>img{object-fit:cover}";
        document.head.appendChild(s);
      }

      const minScaleNeeded = (travel, h) => 1 + (2 * travel) / Math.max(h, 1);
      let raf = 0;
      const frames = [];

      function collect() {
        frames.length = 0;
        document.querySelectorAll("[data-parallax-frame]").forEach((frame) => {
          const img = frame.querySelector("picture > img, img");
          if (!img) return;

          const travel = Number(frame.dataset.parallaxMax || 60);
          const speed = Number(frame.dataset.parallaxSpeed || 1);
          const rect = frame.getBoundingClientRect();
          const height = rect.height || img.getBoundingClientRect().height || 1;
          const requestedScale = Number(frame.dataset.parallaxScale || 0);
          const scale = Math.max(requestedScale, minScaleNeeded(travel, height), 1.02);

          img.style.position ||= "absolute";
          img.style.inset ||= "0";
          img.style.width ||= "100%";
          img.style.height ||= "100%";
          img.style.objectFit ||= "cover";
          img.style.willChange = "transform";
          img.style.setProperty("transform", `translate3d(0,0,0) scale(${scale})`, "important");

          frames.push({ frame, img, travel, speed, scale });
          if (DEBUG) console.log("[parallax] init", { travel, speed, scale, height });
        });
        update(); // initial paint
      }

      function update() {
        raf = 0;
        const vh = window.innerHeight;
        const center = vh / 2;

        frames.forEach((f) => {
          const rect = f.frame.getBoundingClientRect();
          const frameCenter = rect.top + rect.height / 2;
          const norm = Math.max(-1, Math.min(1, (center - frameCenter) / vh));
          const y = norm * f.travel * f.speed;
          f.img.style.setProperty(
            "transform",
            `translate3d(0, ${y.toFixed(2)}px, 0) scale(${f.scale})`,
            "important",
          );
        });
      }

      const requestUpdate = () => {
        if (!raf) raf = requestAnimationFrame(update);
      };

      function init() {
        collect();
        requestUpdate();
      }

      document.addEventListener("astro:page-load", () => {
        collect();
        requestUpdate();
      });
      window.addEventListener("scroll", requestUpdate, { passive: true });
      window.addEventListener("resize", requestUpdate);

      if (document.readyState === "complete" || document.readyState === "interactive") {
        init();
      } else {
        document.addEventListener("DOMContentLoaded", init, { once: true });
      }
    })();
  </script>
  <script slot="scripts" is:inline>
    (() => {
      let observer;
      let pills = [];

      const setFilled = (el, filled) => {
        el.setAttribute("data-pill-filled", filled ? "true" : "false");
      };

      const initObserver = () => {
        if (observer) observer.disconnect();
        observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              const nearViewport = entry.isIntersecting && entry.intersectionRatio >= 0.6;
              setFilled(entry.target, nearViewport);
            });
          },
          {
            threshold: [0, 0.4, 0.6, 0.8, 1],
            rootMargin: "-10% 0px -10% 0px",
          },
        );

        pills.forEach((pill) => {
          setFilled(pill, false);
          observer.observe(pill);
        });
      };

      const collectPills = () => {
        pills = Array.from(document.querySelectorAll(".pill-badge"));
      };

      const initialize = () => {
        collectPills();
        initObserver();
      };

      document.addEventListener("astro:page-load", initialize);

      if (document.readyState === "complete" || document.readyState === "interactive") {
        initialize();
      } else {
        document.addEventListener("DOMContentLoaded", initialize, { once: true });
      }
    })();
  </script>
